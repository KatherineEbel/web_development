<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= @title %></title>
</head>

<body>
      <div id="main">
        <div class="header">
          <h1><%= @title %></h1>
          <ul>
            <% @public.each do |file| %>
              <% next if file == '.' || file == '..' %>
              <li>
                <a href="/<%=file%>"><%= file %></a>
              </li>
            <% end %>
          </ul>
          <% if params[:sort] == "descending" %>
            <a href="/">Sort Ascending</a>
          <% else %>
            <a href="/?sort=descending">Sort Descending</a>
          <% end %>
        </div>
      </div>
</body>
</html>
